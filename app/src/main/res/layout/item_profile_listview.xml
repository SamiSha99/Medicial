<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/relative_layout"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/txtv_acc_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="Account information"
                android:textColor="@color/accent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtv_prof_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="User name"
                android:textColor="@color/accent" />

            <EditText
                android:id="@+id/edt_prof_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edt_login_username"
                android:background="@drawable/custom_button_shape"
                android:drawableStart="@drawable/ic_outline_user"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/accent"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/txtv_prof_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="First name"
                android:textColor="@color/accent" />

            <EditText
                android:id="@+id/edt_prof_firstname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edt_login_username"
                android:background="@drawable/custom_button_shape"
                android:drawableStart="@drawable/ic_outline_label"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/accent"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/txtv_prof_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Last name"
                android:textColor="@color/accent" />

            <EditText
                android:id="@+id/edt_prof_lastname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edt_login_username"
                android:background="@drawable/custom_button_shape"
                android:drawableStart="@drawable/ic_outline_label"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/accent"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/txtv_prof_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="E-mail"
                android:textColor="@color/accent" />

            <EditText
                android:id="@+id/edt_prof_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edt_login_username"
                android:background="@drawable/custom_button_shape"
                android:drawableStart="@drawable/ic_outline_email"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/accent"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/txtv_prof_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Password"
                android:textColor="@color/accent" />

            <EditText
                android:id="@+id/edt_prof_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edt_login_username"
                android:background="@drawable/custom_button_shape"
                android:drawableStart="@drawable/ic_outline_lock"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/accent"
                android:textColorHint="@color/gray" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>