<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.ReminderActivity">

    <ImageView
        android:id="@+id/imgv_bg_medicine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/img_pills" />

    <TextView
        android:id="@+id/txtv_medicine_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Medicine details"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtv_medicine_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv_medicine_det"
        android:layout_marginStart="10dp"
        android:alpha="0.5"
        android:text="Set medicine details"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txtv_add_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv_medicine_note"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Add medicine"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_medName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv_add_medicine"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_edt_shape"
        android:drawableStart="@drawable/ic_outline_medicine_bottle"
        android:drawablePadding="5dp"
        android:hint="medicine name"
        android:inputType="textCapSentences"
        android:padding="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/accent"
        android:textColorHint="@color/accent" />

    <TextView
        android:id="@+id/txtv_amount_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_medName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Amount and how long?"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_amount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv_amount_long"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/custom_edt_shape"
        android:drawableStart="@drawable/ic_outline_tablets"
        android:drawablePadding="5dp"
        android:hint="amount"
        android:inputType="textCapSentences"
        android:padding="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/accent"
        android:textColorHint="@color/accent" />

    <EditText
        android:id="@+id/edt_long"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv_amount_long"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/edt_amount"
        android:background="@drawable/custom_edt_shape"
        android:drawableStart="@drawable/ic_baseline_calendar"
        android:drawablePadding="5dp"
        android:hint="days"
        android:inputType="textCapSentences"
        android:padding="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/accent"
        android:textColorHint="@color/accent" />

    <TextView
        android:id="@+id/txtv_medicine_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_amount"
        android:layout_margin="10dp"
        android:text="Medicine picture"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgv_medicine_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtv_medicine_pic"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgv_medicine_pic"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/btn_upload"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Upload picture" />

        <android.widget.Button
            android:id="@+id/btn_takePic"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Take picture" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward"
        android:text="Next"
        android:textSize="20sp" />

</RelativeLayout>

